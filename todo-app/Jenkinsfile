pipeline {
    agent any

    stages {
        stage('Initialize') {
            steps {
                echo 'üöÄ D√©marrage du Pipeline...'
                // IMPORTANT : On entre dans le dossier o√π se trouve le pom.xml
                dir('todo-app') {
                    // On donne les droits d'ex√©cution au wrapper
                    sh 'chmod +x mvnw'
                    sh './mvnw -version'
                }
            }
        }

        stage('Build & Test') {
            steps {
                dir('todo-app') {
                    echo 'üß™ Lancement des Tests et de JaCoCo...'
                    // Lancement via le wrapper (plus s√ªr que 'mvn')
                    sh './mvnw clean verify'
                }
            }
        }
    }

    post {
        always {
            dir('todo-app') {
                echo 'üìù R√©cup√©ration des rapports...'
                junit 'target/surefire-reports/*.xml'
                
                publishHTML (target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'target/site/jacoco',
                    reportFiles: 'index.html',
                    reportName: 'Rapport Couverture Code'
                ])
            }
        }
        success {
            echo '‚úÖ SUCC√àS : Projet valid√© !'
        }
        failure {
            echo '‚ùå √âCHEC : Regardez les logs pour voir l\'erreur.'
        }
    }
}